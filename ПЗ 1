#include <iostream>
#include <conio.h>
using namespace std;

int main() {
	setlocale(LC_ALL, "Rus");
	int x = 0, a = 0, q = 1, w = 1;
	cout << "Enter the number ";
	cin >> x;
	do {
		q = x / w;
		if (q != 0) {
			a++;
			w *= 10;
		}
	} while (q);
	a--;
	w /= 10;
	cout << x << " = ";
	for (int i = a; i >= 0; i--) {
		q = x / w;
		cout << q << "*10^" << i;
		if (i != 0)
			cout << " + ";
		x -= q * w;
		w /= 10;
	}
	return 0;
}
